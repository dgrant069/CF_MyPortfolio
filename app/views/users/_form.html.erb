<%= form_for(@user) do |f| %>

  <div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %>
  </div>

  <div class="field">
  <%= f.label :time_zone %><br />
  <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
  </div>

  <div class="actions">
  <%= f.submit "Submit Changes" %>
  </div>
<% end %>
